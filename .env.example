# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mothra
POSTGRES_USER=mothra
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql+asyncpg://mothra:changeme@localhost:5432/mothra

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Crawler Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2

# Rate Limiting (requests per minute)
DEFAULT_RATE_LIMIT=50
EPA_RATE_LIMIT=100
ECOINVENT_RATE_LIMIT=10

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Data Storage
DATA_DIR=./mothra/data
RAW_DATA_DIR=./mothra/data/raw
PROCESSED_DATA_DIR=./mothra/data/processed
CACHE_DIR=./mothra/data/cache

# Quality Thresholds
MIN_QUALITY_SCORE=0.7
MIN_CONFIDENCE_LEVEL=0.8
DEDUP_SIMILARITY_THRESHOLD=0.95

# Orchestration
ENABLE_AUTO_UPDATES=true
DAILY_UPDATE_CRON=0 2 * * *
WEEKLY_REFRESH_CRON=0 2 * * SUN
